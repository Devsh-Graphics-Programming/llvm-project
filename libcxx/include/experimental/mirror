  return __metaobject_uses_class_key(_Tp);
}

template <__metaobject_id _Tp>
consteval bool uses_struct_key(metaobject<_Tp>) {
  return __metaobject_uses_struct_key(_Tp);
}

// integer
template <__metaobject_id _Tp>
consteval size_t get_source_line(metaobject<_Tp>) {
  return __metaobject_get_source_line(_Tp);
}

template <__metaobject_id _Tp>
consteval size_t get_source_column(metaobject<_Tp>) {
  return __metaobject_get_source_column(_Tp);
}

template <__metaobject_id _Tp>
consteval size_t get_size(metaobject<_Tp>) {
  return __metaobject_get_size(_Tp);
}

/*
template <__metaobject_id _Tp>
