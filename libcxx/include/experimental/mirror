// unary operations
// boolean
template <__metaobject_id _Tp>
consteval bool is_constexpr(metaobject<_Tp>) {
  return __metaobject_is_constexpr(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_explicit(metaobject<_Tp>) {
  return __metaobject_is_explicit(_Tp);
}

