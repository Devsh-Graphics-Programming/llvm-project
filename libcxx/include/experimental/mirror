#if !defined(_LIBCPP_HAS_NO_PRAGMA_SYSTEM_HEADER)
#pragma GCC system_header
#endif

#ifdef _LIBCPP_HAS_NO_REFLECTION
# if defined(_LIBCPP_WARNING)
    _LIBCPP_WARNING("<experimental/mirror> cannot be used with this compiler")
# else
#   warning <experimental/mirror> cannot be used with this compiler
# endif
#else
# ifdef _LIBCPP_HAS_NO_REFLECTION_EXT
#  if defined(_LIBCPP_WARNING)
     _LIBCPP_WARNING("<experimental/mirror> cannot be used without -freflection-ext ")
#  else
#    warning <experimental/mirror> cannot be used without -freflection-ext
#  endif
# endif
#endif

#if !defined(_LIBCPP_HAS_NO_REFLECTION) && !defined(_LIBCPP_HAS_NO_REFLECTION_EXT )

_LIBCPP_BEGIN_NAMESPACE_EXPERIMENTAL
namespace mirror {

template <__metaobject_id _Tp>
struct metaobject {};

template <__metaobject_id _Tp>
consteval bool is_meta_object(metaobject<_Tp>) {
  return __metaobject_is_meta_object(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_object_sequence(metaobject<_Tp>) {
  return __metaobject_is_meta_object_sequence(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_named(metaobject<_Tp>) {
  return __metaobject_is_meta_named(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_alias(metaobject<_Tp>) {
  return __metaobject_is_meta_alias(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_scope(metaobject<_Tp>) {
  return __metaobject_is_meta_scope(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_typed(metaobject<_Tp>) {
  return __metaobject_is_meta_typed(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_scope_member(metaobject<_Tp>) {
  return __metaobject_is_meta_scope_member(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_enumerator(metaobject<_Tp>) {
  return __metaobject_is_meta_enumerator(_Tp);
}

template <__metaobject_id _Tp>
consteval bool is_meta_record_member(metaobject<_Tp>) {
  return __metaobject_is_meta_record_member(_Tp);
}

template <__metaobject_id _Tp>
