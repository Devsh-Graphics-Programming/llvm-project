  return __metaobject_get_constant(_Tp);
}
*/

// string
template <__metaobject_id _Tp>
consteval string_view get_source_file_name(metaobject<_Tp>) {
  return {__metaobject_get_source_file_name(_Tp),
          __metaobject_source_file_name_len(_Tp)};
}

consteval string_view get_name_view(__metaobject_id mo) {
  return {__metaobject_get_name(mo),
          __metaobject_name_len(mo)};
}

template <__metaobject_id _Tp>
consteval string_view get_name(metaobject<_Tp>) {
  return get_name_view(_Tp);
}

template <__metaobject_id _Tp>
consteval string_view get_display_name(metaobject<_Tp>) {
  return {__metaobject_get_display_name(_Tp),
          __metaobject_display_name_len(_Tp)};
}

// metaobject
template <__metaobject_id _Tp>
consteval auto get_scope(metaobject<_Tp>) {
  return metaobject<__metaobject_get_scope(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_type(metaobject<_Tp>) {
  return metaobject<__metaobject_get_type(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_aliased(metaobject<_Tp>) {
  return metaobject<__metaobject_get_aliased(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_class(metaobject<_Tp>) {
  return metaobject<__metaobject_get_class(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_base_classes(metaobject<_Tp>) {
  return metaobject<__metaobject_get_base_classes(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_member_types(metaobject<_Tp>) {
  return metaobject<__metaobject_get_member_types(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_data_members(metaobject<_Tp>) {
  return metaobject<__metaobject_get_data_members(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_enumerators(metaobject<_Tp>) {
  return metaobject<__metaobject_get_enumerators(_Tp)>{};
}

template <__metaobject_id _Tp>
consteval auto get_parameters(metaobject<_Tp>) {
  return metaobject<__metaobject_get_parameters(_Tp)>{};
}

// unpacking
template <__metaobject_id ... MoIds>
struct unpacked_metaobject_sequence {};

template <__metaobject_id _Tp>
consteval auto unpack(metaobject<_Tp>) {
  return __unpack_metaobject_seq<unpacked_metaobject_sequence, _Tp>{};
}

#define mirror(...) \
  _VSTD_EXPERIMENTAL::mirror::metaobject<__reflexpr_id(__VA_ARGS__)>{}

} // namespace mirror
_LIBCPP_END_NAMESPACE_EXPERIMENTAL


#endif /* !_LIBCPP_HAS_NO_REFLECTION && !_LIBCPP_HAS_NO_REFLECTION_EXT */

#endif /* _LIBCPP_EXPERIMENTAL_MIRROR */
